<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Shader Preview"
        ohos:text_size="20vp"/>

    <RadioContainer
        ohos:id="$+id:radio_container"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">

        <RadioButton
            ohos:id="$+id:rb_clamp"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="CLAMP_TILEMODE"
            ohos:text_size="20fp"/>

        <RadioButton
            ohos:id="$+id:rb_mirror"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="MIRROR_TILEMODE"
            ohos:text_size="20fp"/>

        <RadioButton
            ohos:id="$+id:rb_repeat"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="REPEAT_TILEMODE"
            ohos:text_size="20fp"/>

    </RadioContainer>

    <ScrollView
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center">

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:orientation="vertical">

            <Image
                ohos:id="$+id:img_linear"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:mengma"/>

            <Image
                ohos:id="$+id:img_sweep"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:mengma"/>

            <Image
                ohos:id="$+id:img_radial"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:mengma"/>

            <Image
                ohos:id="$+id:img_group"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:mengma"/>

            <Image
                ohos:id="$+id:img_pixelmap"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:image_src="$media:mengma"/>
        </DirectionalLayout>

    </ScrollView>

</DirectionalLayout>